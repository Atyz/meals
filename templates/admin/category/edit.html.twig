{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <h1 data-tf="adm.category.edit">
        Modifier la catégorie
    </h1>

    {{ form_start(form, {'attr': {
        'novalidate': 'novalidate',
        'data-tf': 'adm.category.form'
    }}) }}
        {% include 'admin/category/form.html.twig' %}

        <button type="submit" class="btn btn-primary">
            Modifier cette catégorie
        </button>

        <a href="{{ url('admin_category') }}" class="btn btn-secondary">
            Retour
        </a>
    {{ form_end(form) }}
{% endblock %}
