{% use "bootstrap_5_layout.html.twig" %}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <div id="{{ id ~ '_error' }}">
            {%- for error in errors -%}
                <div class="invalid-feedback d-block err-idx-{{ loop.index }}">
                    {{ error.message }}
                </div>
            {%- endfor -%}
        </div>
    {%- endif %}
{%- endblock form_errors %}
