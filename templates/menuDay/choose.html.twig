<div>
    {{ form_start(form, {'attr': {
        'novalidate': 'novalidate',
        'data-tf': 'menu.form',
        'data-modal-response-form': 1,
        'data-modal-response-callback': 'reload',
        'action': url('menu_day_choose', { day: day.id })
    }}) }}
        <div class="modal-header">
            <h5 class="modal-title">Choisir le plat</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
            {{ form_row(form.meal, {
                'label': 'Plat',
                'attr': {
                    'data-simple-select2': true,
                    'class': 'w-100',
            }}) }}
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            <button type="button" class="btn btn-primary" data-modal-response-valid>Enregistrer</button>
        </div>
    {{ form_end(form) }}
</div>
