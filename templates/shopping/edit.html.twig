{% extends 'base.html.twig' %}

{% block title %}Modifier l'item{% endblock %}

{% block body %}
    <h1 class="display-3 mb-3" data-tf="shopping.free">
        Modifier l'item
    </h1>

    {{ form_start(form, {'attr': {
        'novalidate': 'novalidate',
        'data-tf': 'shopping.free.form'
    }}) }}
        {% include 'shopping/form.html.twig' %}

        <button type="submit" class="btn btn-primary">
           Modifier
        </button>

        <a href="{{ url('shopping_del', { shopping: shopping.id }) }}" class="btn btn-danger">
            Supprimer
        </a>

        <a href="{{ url('shopping', { menu: menu.id }) }}" class="btn btn-secondary">
            Retour
        </a>
    {{ form_end(form) }}
{% endblock %}
